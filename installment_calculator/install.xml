<?xml version="1.0" encoding="utf-8"?>
<modification>
    <name>Installment Calculator for UniShop2</name>
    <code>installment_calculator_unishop2</code>
    <version>1.0.0.6</version>
    <author>Custom</author>
    
    <!-- Для UniShop2: вставка после цены -->
    <file path="catalog/view/theme/unishop2/template/product/product.twig">
        <operation>
            <search><![CDATA[<ul class="list-unstyled">]]></search>
            <add position="before"><![CDATA[
{% if installment_calculator %}
<div class="installment-wrapper">
{{ installment_calculator }}
</div>
{% endif %}
            ]]></add>
        </operation>
    </file>
    
    <!-- Popup в конец -->
    <file path="catalog/view/theme/unishop2/template/product/product.twig">
        <operation>
            <search><![CDATA[{{ footer }}]]></search>
            <add position="before"><![CDATA[
{% if installment_popup %}
{{ installment_popup }}
{% endif %}
            ]]></add>
        </operation>
    </file>
    
    <!-- JS в header -->
    <file path="catalog/view/theme/unishop2/template/common/header.twig">
        <operation>
            <search><![CDATA[</head>]]></search>
            <add position="before"><![CDATA[
<script src="catalog/view/javascript/installment_calculator.js"></script>
            ]]></add>
        </operation>
    </file>
    
    <!-- Fallback: вставка перед кнопкой Купить -->
    <file path="catalog/view/theme/unishop2/template/product/product.twig">
        <operation error="skip">
            <search><![CDATA[<button type="button" id="button-cart"]]></search>
            <add position="before"><![CDATA[
{% if installment_calculator %}
{{ installment_calculator }}
{% endif %}
            ]]></add>
        </operation>
    </file>
</modification>